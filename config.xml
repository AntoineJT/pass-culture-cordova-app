<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.antoinejt.passculture" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pass Culture</name>
    <description>
        Une application cordova toute simple pour accéder facilement à l'app web du pass culture 
    </description>
    <author email="tournepiche.antoine@gmail.com" href="https://github.com/AntoineJT">
        Antoine "AntoineJT" Tournepiche
    </author>
    <content src="index.html" />
	<icon src="logo.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
